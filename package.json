{
  "name": "auth-boilerplate",
  "version": "0.0.1",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henri-hulski/auth-boilerplate.git"
  },
  "keywords": [
    "cerebral"
  ],
  "author": "Henri Hulski <henri.hulski@gazeta.pl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henri-hulski/auth-boilerplate/issues"
  },
  "homepage": "https://github.com/henri-hulski/auth-boilerplate#readme",
  "scripts": {
    "start": "npm run build&&env/bin/gunicorn server.run",
    "build": "webpack --config webpack.config.js --progress",
    "build:production": "NODE_ENV=production webpack --config webpack.config.js --progress",
    "test": "ava -v",
    "coverage": "nyc ava",
    "coverage:report": "nyc report --reporter=html"
  },
  "dependencies": {
    "cerebral": "2.0.0-b-alpha.714f5cf8",
    "cerebral-provider-forms": "1.0.0-b-alpha.714f5cf8",
    "cerebral-provider-http": "1.0.0-b-alpha.714f5cf8",
    "cerebral-router": "1.0.0-4-router-great-again",
    "jwt-decode": "^2.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-tap-event-plugin": "^2.0.1",
    "semantic-ui-react": "^0.67.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.27.3",
    "file-loader": "^0.10.1",
    "mock-local-storage": "^1.0.2",
    "nyc": "^10.1.2",
    "standard": "^9.0.2",
    "style-loader": "^0.14.1",
    "webpack": "^2.2.1",
    "xhr-mock": "^1.7.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "ava": {
    "files": [
      "client/**/*.test.js"
    ],
    "source": [
      "client/**/*.js"
    ],
    "require": [
      "babel-register",
      "mock-local-storage"
    ],
    "babel": "inherit"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "standard",
      "standard-jsx"
    ],
    "globals": {
      "localStorage": true,
      "URLSearchParams": true,
      "location": true,
      "history": true
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/webpack.*",
      "*.spec.js"
    ],
    "globals": [
      "localStorage",
      "URLSearchParams",
      "location",
      "history"
    ]
  }
}
